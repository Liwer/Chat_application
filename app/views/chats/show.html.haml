%strong
  = @chat.name
%br
%br
%br

- @messages.each do |m|
  %strong
    = m.user.try(:username)
    %br
    = m.created_at
  %br
  %p Message:
  = m.text
  %br
  %br
  %hr
  %br
.h3 Users:
- @users_in_chat.each do |users|
  = users.try(:username)
  %br
= form_for :message, url: chat_create_message_path(@chat) do |f|
  = f.label :text
  = f.text_area :text 
  = f.submit "send"

= link_to 'Edit', edit_chat_path(@chat)
\|
= link_to 'Back', chats_path

